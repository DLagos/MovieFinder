<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/cardview_shadow_end_color">

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/list_story_number_text_view"
        android:layout_alignLeft="@+id/list_story_number_text_view"
        android:layout_alignStart="@+id/list_story_number_text_view"
        android:id="@+id/list_story_description_text_view"
        android:layout_toLeftOf="@+id/list_story_image_view"
        android:layout_toStartOf="@+id/list_story_image_view" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_story_description_text_view"
        android:layout_alignLeft="@+id/list_story_description_text_view"
        android:layout_alignStart="@+id/list_story_description_text_view"
        android:id="@+id/list_story_name_text_view" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/sfsu_logo"
        android:id="@+id/list_story_image_view"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="0dp" />

    <TextView
        android:text="Card 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_story_number_text_view"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

</android.support.v7.widget.CardView>

